# Unified Trading Platform Environment Variables

# ============================================================================
# Database Configuration
# ============================================================================
# Heroku will automatically set DATABASE_URL. For local development, use these:
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=trading_platform
TIMESCALE_USER=admin
TIMESCALE_PASSWORD=password

# ============================================================================
# Redis Configuration
# ============================================================================
# Heroku will automatically set REDIS_URL. For local development, use these:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# Market Data Service Settings
# ============================================================================
# How often to collect market data (in seconds)
DATA_COLLECTION_INTERVAL=5

# Comma-separated list of symbols to monitor
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,DOGEUSDT,XRPUSDT

# ============================================================================
# Decision Engine Settings
# ============================================================================
# OpenRouter API key for AI models
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Initial balance for each AI agent (in USD)
INITIAL_BALANCE=10000.0

# Maximum position size as a fraction of portfolio (0.0 to 1.0)
MAX_POSITION_SIZE=0.3

# Risk per trade as a fraction of portfolio (0.0 to 1.0)
RISK_PER_TRADE=0.02

# How often to run decision engine (in seconds)
DECISION_INTERVAL=60

# ============================================================================
# Trading Service Settings
# ============================================================================
# Commission rate (0.001 = 0.1%)
COMMISSION_RATE=0.001

# Slippage rate (0.0005 = 0.05%)
SLIPPAGE_RATE=0.0005

# ============================================================================
# Server Configuration
# ============================================================================
# Port to run the service on (Heroku will set this automatically)
PORT=8080
