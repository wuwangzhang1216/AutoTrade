# ============================================================
# AutoTrade AI Configuration
# Copy this file to .env and fill in your values
# ============================================================

# OpenRouter AI API (Required)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=AutoTrade AI System

# AI Models Configuration
AI_MODEL_PRIMARY=deepseek/deepseek-chat-v3.1
AI_MODEL_SECONDARY=google/gemini-3-flash-preview

# Fundamental Data APIs (Optional - most have free tiers)
COINGECKO_API_KEY=your-coingecko-api-key

# ============================================================
# Trading Configuration
# ============================================================
INITIAL_CAPITAL=100000
LEVERAGE=20
COMMISSION_RATE=0.0005
TRADING_INTERVAL_MINUTES=15

# Trading fees (NEW - previously hardcoded)
FIXED_FEE_PER_TRADE=2.99
MAINTENANCE_MARGIN_RATIO=0.90
FEE_BUFFER_PERCENT=0.0001

# Position configuration (NEW - previously hardcoded)
MAX_POSITIONS=100
POSITION_SIZE_PERCENT=100.0

# ============================================================
# Security Configuration (NEW)
# ============================================================

# API Authentication
# Set to true to require API key for all endpoints
REQUIRE_AUTH=false

# API Keys (comma-separated for multiple keys)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEY=your-api-key-here
# API_KEYS=key1,key2,key3  # For multiple keys

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_STRICT=30/minute
RATE_LIMIT_RELAXED=200/minute
# Storage: memory:// for development, redis://localhost:6379 for production
RATE_LIMIT_STORAGE=memory://

# ============================================================
# Database Configuration
# ============================================================
# SQLite (development)
DATABASE_URL=sqlite:///./autotrade.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost/autotrade

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ============================================================
# Cache Settings
# ============================================================
CACHE_EXPIRY_MINUTES=30
FUNDAMENTAL_DATA_CACHE_HOURS=6

# ============================================================
# Frontend Configuration (for CORS)
# ============================================================
FRONTEND_URL=http://localhost:5173

# ============================================================
# AI Scheduler Configuration
# ============================================================
ENABLE_AI_SCHEDULER=false
AI_SCHEDULER_INTERVAL_MINUTES=5
